{
  "description": "The Golden Image which has all common packages installed.\nBased on Ubuntu Server 18.04",
  "variables": {
    "region": null,
    "subnet_id": null,
    "source_ami": null,
    "ami_name": "ubuntu/18.04/base/{{isotime \"20060102T150405Z\"}}",
    "instance_type": "t3.micro",
    "iam_instance_profile": "packer-ec2",
    "timezone": "Asia/Shanghai",
    "java_version": "11.0.5.10-1",
    "node_exporter_version": "0.18.1",
    "docker_version": "19.03.4",
    "consul_version": "1.5.3",
    "nomad_version": "0.9.6"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "ami_name": "{{user `ami_name`}}",
    "ami_description": "The golden image that other AMIs based on.",
    "instance_type": "{{user `instance_type`}}",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "ssh_username": "ubuntu",
    "associate_public_ip_address": true,
    "subnet_id": "{{user `subnet_id`}}",
    "tags": {
      "Name": "{{user `ami_name`}}",
      "Base AMI": "{{user `source_ami`}}",
      "OS": "Ubuntu Server",
      "OS Version": "18.04",
      "Timezone": "{{user `timezone`}}",
      "Java Distribution": "Amazon Corretto",
      "Java Version": "{{user `java_version`}}",
      "Node Exporter Version": "{{user `node_exporter_version`}}",
      "Docker Version": "{{user `docker_version`}}",
      "Consul Version": "{{user `consul_version`}}",
      "Nomad Version": "{{user `nomad_version`}}"
    }
  }],
  "provisioners": [
  {
    "type": "shell",
    "inline": [
      "echo 'Wait 30 seconds for the OS to initialize...'",
      "sleep 30"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/bash-helpers.sh",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "environment_vars": [
      "BASH_HELPERS=/tmp/bash-helpers.sh",
      "TIMEZONE={{user `timezone`}}",
      "JAVA_VERSION={{user `java_version`}}",
      "NODE_EXPORTER_VERSION={{user `node_exporter_version`}}"
    ],
    "scripts": [
      "provisioners/shell/apt-mirrors.sh",
      "provisioners/shell/apt-upgrade.sh",
      "provisioners/shell/apt-daily-conf.sh",
      "provisioners/shell/packages.sh",
      "provisioners/shell/journald-conf.sh",
      "provisioners/shell/core-pattern.sh",
      "provisioners/shell/kernel-tuning.sh",
      "provisioners/shell/chrony.sh",
      "provisioners/shell/timezone.sh",
      "provisioners/shell/pip-source.sh",
      "provisioners/shell/awscli.sh",
      "provisioners/shell/java-11-amazon-corretto.sh",
      "provisioners/shell/prometheus/node-exporter.sh"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/cloud-init/mount-nvme-instance-store",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
      "cd /tmp/",
      "sudo install -v mount-nvme-instance-store /var/lib/cloud/scripts/per-instance/"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/ebs",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
      "cd /tmp/ebs",
      "sudo install -v ebs-nvme-id /usr/local/bin/",
      "sudo install -v -m 644 99-ebs-nvme.rules /etc/udev/rules.d/",
      "sudo install -v ebs-init /usr/local/bin/"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/docker",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
      "cd /tmp/docker",
      "chmod +x install-docker",
      "./install-docker --version {{user `docker_version`}}"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/consul",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
      "cd /tmp/consul",
      "chmod +x install-consul",
      "./install-consul --version {{user `consul_version`}}"
    ]
  },
  {
    "type": "file",
    "source": "provisioners/shell/nomad",
    "destination": "/tmp/"
  },
  {
    "type": "shell",
    "inline": [
      "cd /tmp/nomad",
      "chmod +x install-nomad",
      "./install-nomad --version {{user `nomad_version`}}"
    ]
  },
  {
    "type": "shell",
    "inline": [
      "echo 'Validating provisioners...'",
      "aws --version",
      "java -version",
      "prometheus-node-exporter --version",
      "docker --version",
      "consul --version",
      "nomad --version",
      "echo 'Remove ssh key to make the AMI more secure.'",
      "rm -vf ~/.ssh/authorized_keys"
    ]
  }],
  "post-processors": [
    {
      "type": "manifest"
    }
  ]
}
